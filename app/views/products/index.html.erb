
<div class="row">

<%= render  "layouts/category" %>

<div class="col left product">

<h1 class="th_table">Products</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col" class="th_table">Title</th>
      <th scope="col" class="th_table">Description</th>
      <th scope="col" class="th_table">Image url</th>
      <th scope="col" class="th_table">Price</th>
      <th colspan="3" class="th_table">Option</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url, class: 'image') %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
        <%= link_to 'Show', product, class: 'btn_Show' %>
        </td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn_Edit' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn_Destroy ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col middle">
</div>

<br>

<%= link_to 'New Product', new_product_path %>
</div>
</div>
