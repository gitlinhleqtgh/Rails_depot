<div class="cart">
    <% if notice %>
    <p id="notice"><%= notice %></p>
    <%end%>
    <h2>Your Cart</h2>
    <table class="cart_table">
    <%= render  cart.line_items %>
        <tr class="total_line">
            <td colspan="2">Total</td>
            <td class="total_cell"><%= number_to_currency(cart.total_price)%></td>
            <td></td>
        </tr>
    </table>

    <div>
        <%= button_to 'Empty cart',
               cart,
               :method => :delete,
               data: {:confirm => 'Are you sure?'} %>
    </div>
</div>