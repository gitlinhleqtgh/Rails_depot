

<div class="row">
<%= render  "layouts/category" %>
<div class="col left">
<% if notice %>
    <aside id='notice'>
    <%= notice %>
    </aside>
    <% end %>
    <h1 style="font-family: 'Courier New', Courier, monospace;">
    List Products </h1>
    <ul class="catalog">
    <% cache @products do %>
        <% @products.each do |product|%>
        <% cache product do %>
            <li id="id_product">
                <div class="card">
                    <%= image_tag(product.image_url, class: 'image')%>
                    <h2 class="title"> <%= product.title %></h2>
                    <p class="description">
                    <%= sanitize(product.description)%>
                    </p>
                    <div class="price">
                    <%= number_to_currency(product.price)%>
                    </div>
                    <div class="str_button">
                     <%= button_to 'Add to Cart',
                         line_items_path(product_id: product),
                         class: 'btn_addCart',
                         :remote => true%>
                    </div>

                </div>
            </li>
        <% end %>
        <% end %>
        <% end %>
    </ul>
</div>
</div>

